        %div{class: "group"}
          %div{class: "group__name"}
            Ryota_TV
          %div{class: "group__message"}
            良かった

    %div{class: "content"}
      %div{class: "upper"}
        %div{class: "team"}
          %div{class: "team__name"}
            Ryota_chat
          %div{class: "team__member"}
            MEMBER: ryota,keita
        %div{class: "edit"}
          %div{class: "edit__button"}
            Edit
      %div{class: "chats"}
        %div{class: "chat"}
          %div{class: "chat__name"}
            keita
          %div{class: "chat__message"}
            お久しぶり
        %div{class: "chat"}
          %div{class: "chat__name"}
            ryota
          %div{class: "chat__message"}
            ヤッホー
      %div{class: "form"}
        %form
          %input{class: "form__message", placeholder: "type a txet"}
          %div{class: "form__mask"}
