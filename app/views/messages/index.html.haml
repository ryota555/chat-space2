    %div{class: "side_bar"}
      %div{class: "header"}
        %h1{class: "header__element"}
          ryota
        %ul{class: "header__lists"}
          %li{class: "list"}
            =link_to do
              =fa_icon 'pencil-square-o', class: 'icon'
          %li{class: "list"}
            =link_to do
              =fa_icon 'cog', class: 'icon'
      %div{class: "groups"}
